{
  "name": "shaclc-write",
  "version": "1.6.3",
  "description": "A writer for SHACLC documents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/* __tests__/*.ts --ext .ts",
    "lint:fix": "eslint lib/* __tests__/*.ts --ext .ts --fix",
    "build": "tsc",
    "prepare": "tsc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeswr/shaclc-writer.git"
  },
  "keywords": [
    "SHACLC",
    "SHACL-compact-syntax",
    "writer",
    "rdf"
  ],
  "author": "Jesse Wright <jesse.wright@anu.edu.au>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeswr/shaclc-writer/issues"
  },
  "homepage": "https://github.com/jeswr/shaclc-writer#readme",
  "devDependencies": {
    "@rdfjs/types": "^2.0.1",
    "@types/jest": "^30.0.0",
    "@types/n3": "^1.26.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "jest-rdf": "^2.0.0",
    "pre-commit": "^1.0.10",
    "semantic-release": "^25.0.2",
    "shaclc-parse": "^2.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@jeswr/prefixcc": "^1.2.1",
    "n3": "^2.0.0",
    "rdf-string-ttl": "^2.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "verbose": false,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 100,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "pre-commit": [
    "lint",
    "build",
    "test"
  ],
  "release": {
    "branches": [
      "main"
    ]
  }
}
